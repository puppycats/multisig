{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": [
        "src/**/*"
    ]
}